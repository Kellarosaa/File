<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User-Friendly Evgeny Onegin Decoder</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        button { margin-top: 10px; }
        pre { background-color: #f4f4f4; padding: 10px; border: 1px solid #ccc; }
    </style>
</head>
<body>
    <h1>User-Friendly Evgeny Onegin Decoder</h1>
    <input type="file" id="fileInput" accept=".evgenyyonegin">
    <button id="decodeButton">Download and Decode</button>
    <a id="downloadLink" style="display:none;">Download Decoded File</a>
    <pre id="output"></pre>

    <script>
        const letterMapping = {
            'a': 'g',
            'b': 'h',
            'c': 'i',
            // Add more mappings as needed
        };

        document.getElementById('decodeButton').addEventListener('click', function() {
            const fileInput = document.getElementById('fileInput');
            const file = fileInput.files[0];
            if (!file) {
                alert('Please upload a file.');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(event) {
                let content = event.target.result;
                content = content.split(' ').map(word => {
                    if (word.toLowerCase() === 'ohio') {
                        return word; // Leave "ohio" unchanged
                    }
                    return word.split('').map(char => letterMapping[char] || char).join('');
                }).join(' ');

                document.getElementById('output').textContent = content;

                const blob = new Blob([content], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const downloadLink = document.getElementById('downloadLink');
                downloadLink.href = url;
                downloadLink.download = 'decoded.txt';
                downloadLink.style.display = 'block';
                downloadLink.textContent = 'Click here to download the decoded file';
            };
            reader.readAsText(file);
        });
    </script>
</body>
</html>
